<h1>Agency#edit</h1>
<div>
<%= form_with model: @agency do | form | %>

<div>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div>
  <%= form.label :description %>
  <%= form.text_area :description %>
</div>

  <div>
    <%= form.label :address_id %>
    <%= form.fields_for :address do |ff| %>
    <div>
      <%= ff.label :number %>
      <%= ff.number_field :number %>
    </div>
    <div>
      <%= ff.label :street %>
      <%= ff.text_field :street %>
    </div>
    <div>
      <%= ff.label :city %>
      <%= ff.text_field :city %>
    </div>
    <div>
      <%= ff.label :state %>
      <%= f.select :state, ['VIC', 'NSW', 'WA', 'QLD', 'TAS', 'NT', 'ACT', 'SA'] %>
    </div>
    <div>
      <%= ff.label :postcode %>
      <%= ff.number_field :postcode %>
    </div>
    <% end %>
  
  <div>
    <%= form.submit %>
  </div>

  <% end %>


</div>
